<UserControl
    x:Class="FishMashNew.UserControls.ExamDetailsUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FishMashNew.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Name}" 
                   FontSize="20"
                   Foreground="Black"
                   x:Name="Name"
                   Grid.Column="0"
                   Grid.Row="0"/>
        <TextBlock Text="{Binding DateExamFinish}"
                   Foreground="Black"
                   FontSize="16"
                   Grid.Column="0"
                   Grid.Row="1"
                   />
        <TextBlock x:Name="ListId"
                   Text="{Binding Id}"
                   Visibility="Collapsed"
                   />
        <Button x:ConnectionId='1'  Grid.Column="1" Grid.RowSpan="2"
                 Background="#FF6600" Content="exam"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Stretch"
                                      />
    </Grid>
</UserControl>

