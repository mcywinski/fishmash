<UserControl
    x:Class="FishMashNew.UserControls.ErrorInfoUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FishMashNew.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Margin="10" Background="#CC5200">
        <TextBlock Text="{Binding ErrorUserControlText}"
                   FontSize="18"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <Button
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontFamily="/Assets/Lobster.otf#Lobster 1.4"
            Command="{Binding OkButtonOnIncorrectPasswordUserControl}">OK</Button>
    </Grid>
</UserControl>
