<!DOCTYPE html>
<html>
<head>
  <title>FishMash</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% unless flash[:errors].blank? %>
  <!-- Errors container -->
  <div>
    <%= raw flash[:errors] %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
