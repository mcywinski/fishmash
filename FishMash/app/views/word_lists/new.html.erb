<div class="col-md-12" style="height: 75px;"></div>
<div class="col-md-3"></div>
<div class="col-md-6">
  <h1>Create new list</h1>
  <%= form_for :word_list, url: wordlists_path, action: :create do |f| %>
    <p>
      <%= f.text_field :name, placeholder: 'Enter the list name' %>
    </p>
    <p>
      <%= f.text_area :description, placeholder: 'Shortly descrive the purpose or content of this word list...' %>
    </p>
    <p>
      <%= f.select :main_language_id, create_select_options(@languages, 'Main language') %>
      <%= f.select :foreign_language_id, create_select_options(@languages, 'Foreign language') %>
    </p>
    <p>
      <%= f.submit 'Create a word list' %>
    </p>
  <% end %>
</div>
<div class="col-md-3"></div>
