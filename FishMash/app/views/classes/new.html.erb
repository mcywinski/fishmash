<div class="col-md-12" style="height: 75px;"></div>
<div class="col-md-3"></div>
<div class="col-md-6">
  <h1 class="fish-h1">Add a new class</h1>
  <%= form_for :student_class, url: classes_path do |f| %>
    <p>
      <%= f.text_field :name, :placeholder => 'Enter the class name' %>
    </p>
    <p>
      <%= f.text_area :description, :placeholder => 'Enter the class description' %>
    </p>
    <p>
      <%= f.submit "Create", :class => 'button-link' %>
      <%= link_to  'Return', classes_path, :class => 'button-link'%>
    </p>
  <% end %>
</div>
<div class="col-md-3"></div>
