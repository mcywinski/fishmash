<h1>Sign up at FishMash</h1>
<%= form_for @user, url: users_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="form-group">
    <%= f.label :login %>
    <%= f.text_field :login %>
  </div>
  <div class="form-group">
    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.label "Confirm password" %>
      <%= f.password_field :password_confirmation %>
    </p>
  </div>
  <div class="form-group">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
