<div class="col-md-12" style="height: 75px"></div>
<div class="col-md-3"></div>
<div class="col-md-6 answer">
  <h1 class="fish-h1"><%= @exam.name %></h1>
  <h2 class="fish-h2">Provide translation for
    <p class="answer-word"><%= @answer.word.meaning %></p>
    <p id="time-left">
    </p>
  </h2>
  <%= form_for :answer, url: exam_answer_path, method: :post do |f| %>
    <p>
      <%= f.text_field :answer, placeholder: 'Type in a foreign meaning' %>
    </p>
    <%= f.hidden_field :answer_id, value: @answer.id %>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>
<div class="col-md-3"></div>
<script type="text/javascript">
  $(document).ready(function () {
    setInterval(function () {
      $('#time-left').empty();
      var time = countdown(new Date(<%= @finish_time.to_i %>) * 1000);
      $('#time-left').append(time.toString() + ' left');
      if (time == 0)
        location.reload();
    }, 1000);
  });
</script>
