<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <!-- START learning header-->
        <LinearLayout
            android:id="@+id/linearLayoutLearningHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/main_learning_header"
                android:adjustViewBounds="true"
                android:contentDescription="@string/learning"
                android:paddingBottom="@dimen/activity_vertical_margin"/>

            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dip"/>

        </LinearLayout>
        <!-- END learning header-->

        <!-- ###-->

        <!-- START learning section-->
        <TableLayout
            android:id="@+id/tableLayoutLearningSection"
            android:layout_below="@+id/linearLayoutLearningHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true">
        </TableLayout>
        <!-- END learning section-->

        <!-- ###-->

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/learning_and_exams_separator"
            android:layout_below="@+id/tableLayoutLearningSection"/>

        <!-- ###-->

        <!-- START layout_exam header-->
        <LinearLayout
            android:id="@+id/linearLayoutExamHeader"
            android:layout_below="@+id/learning_and_exams_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/main_exams_header"
                android:adjustViewBounds="true"
                android:contentDescription="@string/exams"
                android:paddingBottom="@dimen/activity_vertical_margin"/>

            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dip"/>

        </LinearLayout>

        <!-- END layout_exam header-->

        <!--###-->

        <!-- START layout_exam section-->
        <TableLayout
            android:id="@+id/tableLayoutExamSection"
            android:layout_below="@+id/linearLayoutExamHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true">
        </TableLayout>
        <!-- END layout_exam section-->

    </RelativeLayout>

</ScrollView>